<script>
$(document).ready(function() {
	$('.popup_callback .close_window_callback, .overlay_callback').click(function (){
		$('.popup_callback, .overlay_callback').css('opacity','0');
		$('.popup_callback, .overlay_callback').css('visibility','hidden');
		});
		$('a.callback').click(function (e){
		$('.popup_callback, .overlay_callback').css('opacity','1');
		$('.popup_callback, .overlay_callback').css('visibility','visible');
		e.preventDefault();
	});
)};
</script>

